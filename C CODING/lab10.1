#include <stdio.h>
#include <stdlib.h>

int main()
{
    char ch;
    FILE *file_pointer;
    file_pointer = fopen("Notepad Files", "w");
    if(file_pointer == NULL){
        printf("failed to open file.");
        exit(1);
    }
    do{
        ch = getchar();
        putc(ch, file_pointer);
    }while(ch != '\n');
    fclose(file_pointer);
    return 0;
}
